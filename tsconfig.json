{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "declaration": false,
    "emitDecoratorMetadata": false,
    "experimentalDecorators": false,
    "allowJs": true,
    "lib": [
      "dom",
      "es2015"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "target": "es5",
    "skipLibCheck": true,
    "stripInternal": true,
    "noImplicitAny": false
  },
  "files": [
    "client/main.js",
    "server/main.js"
  ],
  "exclude": [
    "node_modules",
    ".meteor/local"
  ],
  "compileOnSave": false
}